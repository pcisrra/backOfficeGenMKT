    <link rel="stylesheet" href="~/Content/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <link rel="stylesheet" href="~/Content/plugins/dist/css/adminlte.min.css">
</head>
<body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
    <div class="wrapper">
        <div class="preloader flex-column justify-content-center align-items-center">
            <img class="animation__wobble" src="~/Content/plugins/dist/img/bcp-login-icon.png" alt="Logo" height="60" width="60">
        </div>
        <nav class="main-header navbar navbar-expand navbar-dark">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#" role="button">
                        <i class="fas fa-th-large"></i>
                    </a>
                </li>
            </ul>
        </nav>

        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="#" class="brand-link">
                <img src="~/Content/plugins/dist/img/bcp-login-icon.png" alt="Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">Generador QR</span>
            </a>
            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item menu-open">
                            <a href="#" class="nav-link active">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Generar QR
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("Single", "Generator")" class="nav-link active">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>QR por Cliente</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Batch", "Generator")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>QR por Lote</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("GetFile", "Generator")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>DESCARGAR PLANTILLA</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-header">REPORTES</li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-search"></i>
                                <p>
                                    Generar Reporte
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("Single", "Report")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Unitarios</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Batch", "Report")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Lotes</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-header">USUARIOS/ROLES</li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-circle"></i>
                                <p>
                                    Autorizar Personal
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("Index", "User")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Usuarios</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Permission", "User")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Roles/Permisos</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <div class="content-wrapper">
            <section class="content" id="searchClientForm" style="display: block;">
                <div class="container-fluid">
                    <h2 class="text-center display-4">Ingrese los datos del cliente</h2>
                    <div class="row">
                        <div class="card card-danger" style="width: 100%;">
                            <br />
                            <div class="card-header">
                                <h3 class="card-title">VERIFICACIÓN DE DATOS</h3>
                            </div>
                            <br />
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-5">
                                        <input type="text" class="form-control" placeholder="Número de CI" id="IDCClient">
                                    </div>
                                    <div class="col-2">
                                        <select class="custom-select rounded-5" id="extensionClient">
                                            <option value="LP">La Paz</option>
                                            <option value="CB">Cochabamba</option>
                                            <option value="SC">Santa Cruz</option>
                                            <option value="OR">Oruro</option>
                                            <option value="PO">Potosi</option>
                                            <option value="BE">Beni</option>
                                            <option value="CH">Chuquisaca</option>
                                            <option value="TJ">Tarija</option>
                                            <option value="PA">Pando</option>
                                            <option value="XX">Sin Extensión</option>
                                        </select>
                                    </div>
                                    <div class="col-2">
                                        <input type="text" class="form-control" placeholder="Complemento" id="cmpClient">
                                    </div>
                                    <div class="col-2" id="btnSearchClient">
                                        <button type="button" class="btn btn-block btn-outline-info btn-lg">Buscar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <section class="content" id="generateQRForm" style="display: none;">
                <div class="container-fluid">
                    <div class="row">
                        <div class="card card-success" style="width: 100%;">
                            <br />
                            <div class="card-header">
                                <h3 class="card-title">COMPLETE LOS DATOS DEL CLIENTE PARA LA GENERACIÓN DEL CÓDIGO QR</h3>
                            </div>
                            <br />
                            <div class="card-body">
                                <div class="form-group row">
                                    <label for="recClientIdc" class="col-sm-2 col-form-label">Número de CI: </label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control is-valid col-5" id="recClientIdc" value="6144701" readonly>
                                    </div>
                                    <label for="recClientExt" class="col-sm-2 col-form-label">Extensión de CI: </label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control is-valid col-2" id="recClientExt" value="LP" readonly>
                                    </div>
                                    <label for="recClientCmp" class="col-sm-2 col-form-label">Complemento de CI: </label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control is-valid col-2" id="recClientCmp" value="00" readonly>
                                    </div>
                                    <label for="recClientName" class="col-sm-2 col-form-label">Nombre Completo: </label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control is-valid" id="recClientName" value="Isrrael Pena Chavez" readonly>
                                    </div>
                                    <label for="recClientCell" class="col-sm-2 col-form-label">Celular: </label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control is-valid" id="recClientCell" value="76238390" readonly>
                                    </div>
                                    <label for="recClientMail" class="col-sm-2 col-form-label">Correo Electrónico: </label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control is-valid" id="recClientMail" value="IPena@bcp.com.bo" readonly>
                                    </div>
                                </div>
                                <br/>
                                <div class="tab-custom-content"></div>
                                <br/>
                                <div class="form-group row">
                                    <label for="recClientAccount" class="col-sm-2 col-form-label">Cuenta(s) del Cliente: </label>
                                    <select class="form-control select2 col-sm-10" style="width: 150px;" id="recClientAccount">
                                        <option selected="selected" value="0">--Seleccione una cuenta--</option>
                                        <option value="add_account_here">201-51317938-3-82</option>
                                        <option value="add_account_here">201-51493251-3-66</option>
                                    </select>
                                    <label for="recClientActCurrency" class="col-sm-2 col-form-label">Moneda: </label>
                                    <select class="form-control select2 col-sm-10" style="width: 70px;" id="recClientActCurrency">
                                        <option selected="selected" value="0">--Seleccione una moneda--</option>
                                        <option value="BOB">Bolivianos (Bs)</option>
                                        <option value="USD">Dólares (Usd)</option>
                                    </select>
                                    <label for="uniquePayQR" class="col-sm-2 col-form-label">¿QR de uso único? </label>
                                    <input type="checkbox" name="my-checkbox" id="uniquePayQR" data-bootstrap-switch>
                                    <br />
                                    <button type="button" id="btnGenerateSingle" class="btn btn-block btn-outline-warning btn-lg">Obtener QR</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <aside class="control-sidebar control-sidebar-dark"></aside>
        <footer class="main-footer">
            <strong>Copyright &copy; 2022 <a href="https://www.bcp.com.bo">Banco de Crédito de Bolivia S.A</a></strong>
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 1.0.0
            </div>
        </footer>
    </div>

    <script src="~/Scripts/plugins/jquery/jquery.min.js"></script>
    <script src="~/Scripts/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <script src="~/Scripts/dist/js/adminlte.js"></script>
    <script src="~/Scripts/plugins/jquery-mousewheel/jquery.mousewheel.js"></script>
    <script src="~/Scripts/plugins/raphael/raphael.min.js"></script>
    <script src="~/Scripts/plugins/jquery-mapael/jquery.mapael.min.js"></script>
    <script src="~/Scripts/plugins/jquery-mapael/maps/usa_states.min.js"></script>
    <script src="~/Scripts/plugins/chart.js/Chart.min.js"></script>
    <script src="~/Scripts/dist/js/demo.js"></script>
    <script src="~/Scripts/dist/js/pages/dashboard2.js"></script>
</body>
</html>